{
  "name": "playnexus-system-monitor",
  "version": "1.0.0",
  "description": "Cyberpunk-themed Windows system monitoring and utility tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "playnexus",
    "system-monitor",
    "cyberpunk",
    "windows",
    "electron"
  ],
  "author": "PlayNexus Development Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "systeminformation": "^5.21.7",
    "node-ps": "^1.0.0",
    "ps-list": "^8.1.2",
    "clipboardy": "^3.0.0",
    "screenshot-desktop": "^1.12.7",
    "chokidar": "^3.5.3",
    "node-cron": "^3.0.3"
  },
  "build": {
    "appId": "com.playnexus.systemmonitor",
    "productName": "PlayNexus System Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!build/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}